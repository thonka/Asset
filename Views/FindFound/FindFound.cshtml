<script>

    $.ajax({
        type: "GET",
        url: "/project/GetFind",
        data: "{}",
        success: function(data) {
            var s;
            for (var i = 0; i < data.length; i++) {

                s += '<option value="' + data[i].CountID + '">' + data[i].CountID + ' | ' + data[i].CountDesc + '</option>';

            }
            $("#CountDropdown").html(s);
        }

    });


    $(document).ready(function() {

        var cs = $("#CountDropdown").val();

        $('#LocationTable').DataTable({
            ajax: {
                url: "/UserConfig/GetLocationAll",
                type: "get",
                dataSrc: ''
            },
            columns: [
                { data: "CompanyID", title: "Location ID", width: '100px' },
                { data: "Name1", title: "Location Name" },
                {
                    data: null,
                    title: "Project ID",
                    render: function(data, type, row) {
                        if (type === 'display') {
                            return cs;
                        }
                        return data;
                    },
                    width: '100px'
                },
                {
                    data: "SalePersonID",
                    title: "Found",
                    width: '30px',
                    render: function (data, type, row) {
                        if (data === '') {
                            return 0;
                        }
                        return data;
                    }
                },
                {
                    data: "Remark1",
                    title: "Not Found",
                    width: '30px',
                    render: function (data, type, row) {
                        if (data === '') {
                            return 0;
                        }
                        return data;
                    }
                },
                {
                    data: "Remark2",
                    title: "Miss Location",
                    width: '30px',
