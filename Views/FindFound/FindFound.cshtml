    Chart.defaults.global.defaultFontColor = '#292b2c';

    // Bar Chart Example
    var ctx = document.getElementById("ChartLocation");
    var myLineChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["0010", "0020", "0030", "0040", "1000", "1010", "1020", "1030", "2000", "2010", "2020", "3010", "3020", "3030", "3040", "3050", "3060", "4000", "5000", "6000", "7000", "8000", "9000", "9006"],
            datasets: [{
                label: ['Found'],
                backgroundColor: ['#007bff'],
                borderColor: "rgba(2,117,216,1)",
                data: [0]
            },
            {
                label: [ 'Not Found'],
                backgroundColor: ['#dc3545'],
                borderColor: "rgba(2,117,216,1)",
                data: [8744,10,10]
            },
            {
                label: ['Miss Location'],
                backgroundColor: ['#ffc107'],
                borderColor: "rgba(2,117,216,1)",
                data: [0,0]
            }
            ]

            
        },
        options: {
            scales: {
                xAxes: [{
                    time: {
                        unit: 'Location'
                    },
                    gridLines: {
                        display: false
                    },
                    ticks: {
                        maxTicksLimit: 6
                    }
                }],
                yAxes: [{
                    ticks: {
                        min: 0,
                        max: 10000,
                        maxTicksLimit: 10
                    },
                    gridLines: {
                        display: true
                    }
                }],
            },
            legend: {
                display: false
            }
        }
    });

    $.ajax({
        url: "/Project/getCount",
        method: "GET",
        success: function (data) {
            var player = [];
            var score = [];
            for (var i in data) {
                player.push(data[i].ItemCate);
                score.push(data[i].Count);
            }

            var chartdata = {
                labels: player,
                datasets: [{
                    label: 'Found',
                    backgroundColor: 'blue',
                    borderColor: 'blue',
                    hoverBackgroundColor: 'rgba(200, 200, 200, 1)',
                    hoverBorderColor: 'rgba(200, 200, 200, 1)',
                    fill: false,
                    data: '',
                    responsive: true
                },
                {
                    label: 'Not Found',
                    backgroundColor:  'red',
                    borderColor:  'red',
                    hoverBackgroundColor: 'rgba(200, 200, 200, 1)',
                    hoverBorderColor: 'rgba(200, 200, 200, 1)',
                    fill: false,
                    data: score,
                    responsive: true
                },
                {
                    label: 'Misslocation',
                    backgroundColor: 'green',
                    borderColor: 'green',
                    hoverBackgroundColor: 'rgba(200, 200, 200, 1)',
                    hoverBorderColor: 'rgba(200, 200, 200, 1)',
                    fill: false,
                    data: '',
                    responsive: true
                }
                ]


            };
            var ctx = $("#mycanvas");
            var myLineChart = new Chart(ctx, {
                type: 'bar',
                data: chartdata,

            });
        },
        error: function (data) {
        }
    });
</script>