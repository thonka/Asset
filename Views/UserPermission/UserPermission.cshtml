<!DOCTYPE html>
<html lang="en">
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <title>Cinfig - User Permission</title>

</head>
<body class="sb-nav-fixed">

    <main>
        <div class="container-fluid">

            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                <li class="breadcrumb-item active">User Permission</li>
            </ol>

            <div class="card mb-12">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-11">
                            <i class="fa fa-briefcase "></i>
                            &nbsp; User Permission
                        </div>
                        <div class="col-md-1">
                            <a value="New" class="btn btn-primary" style="width: 100%; font-size: small" href="~/UserPermission/NewUserPermission"><i class="fas fa-plus-circle"></i>&nbsp;  New</a>

                        </div>
                    </div>


                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered nowrap" id="UserTable" width="100%" cellspacing="0">
                            <thead>



                            </thead>

                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>

        $(document).ready(function () {



            $('#UserTable').DataTable({
                scrollX: true,
                ajax: {
                    url: "/UserConfig/GetAll",
                    type: "get",
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'Username', render: function (data, type, row) {
                            return '<div align="center"><a href="/UserPermission/NewUserPermission/' + data + '"><i class="far fa-edit fa-2x"></i></a></div>';

                        }, width: '30px'

                    },
                    { data: "Username", title: "User Name", width: '100px' },
                    { data: "FullName", title: "Full Name" },
                    {
                        data: "IsProgramUser", title: "Program User", render: function (data, type, row) {
                            if (type === 'display') {
                                return '<div align="center"><input type="checkbox"></div>';
                            }
                            return data;
                        }, width: '30px'
                    }

                ],
                select: true,
                dom: "Bfrtip",

                buttons: [
                    //{
                    //    text: "New"


                    //},
                    { extend: "excel" }

                ]
            });


            $.fn.dataTable.ext.errMode = 'throw';
        });
    </script>
</body>


</html>
