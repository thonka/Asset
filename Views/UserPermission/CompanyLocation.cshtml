<!DOCTYPE html>
<html lang="en">
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <title>Cinfig - Company Location</title>



</head>
<body class="sb-nav-fixed">
<main>
    <div class="container-fluid">

        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
            <li class="breadcrumb-item active">Company Location</li>
        </ol>

        <div class="card mb-12">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-11">
                    </div>
                    <div class="col-md-1">
                        <div align="right">
                            <a value="New" class="btn btn-primary" style="width: 100%; font-size: small" href="~/UserPermission/NewLocation"><i class="fas fa-plus-circle"></i>&nbsp;  New</a>
                        </div>

                    </div>
                </div>


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered nowrap" id="LocationTable" width="100%" cellspacing="0">
                        <thead>



                        </thead>

                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<script>

    $(document).ready(function() {


        $('#LocationTable').DataTable({
            scrollX: true,
            ajax: {
                url: "/UserConfig/GetLocationAll",
                type: "get",
                dataSrc: ''
            },
            columns: [
                {
                    data: 'CompanyID',
                    render: function(data, type, row) {
                        return '<div align="center"><a href="/UserPermission/NewLocation/' + data + '"><i class="fas fa-folder-open fa-2x"></i></a></div>';

                    }, width: '30px'

                },
                { data: "CompanyID", title: "Location ID", width: '100px' },
                { data: "Name1", title: "Location Name" },
                { data: "ParentID", title: "Root", width: '100px' }
            ],
            select: true,
            dom: "Bfrtip",

            buttons: [
                //{
                //    text: "New"


                //},
                //{ extend: "excel" }
            ]
        });


        $.fn.dataTable.ext.errMode = 'throw';
    });
</script>


    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/api/getAlllocation",
                data: '{}',
                success: function (data) {
                    var s = '<option value="-1"></option>';
                    var c = '<option value="-1"></option>';

                    for (var i = 0; i < data.length; i++) {
                        if (data[i].ParentID !== "") {
                            s += '<option value="' + data[i].ParentID + '">' + data[i].ParentID + ' | ' + data[i].Name1 + '</option>';
                            c += '<option value="' + data[i].CompanyID + '">' + data[i].CompanyID + ' | ' + data[i].Name1 + '</option>';
                        }
                    }
                    $("#LocationDropdown").html(s);
                    $("#CostDropdown").html(c);
                }
            });



        });


    </script>
</body>


</html>
